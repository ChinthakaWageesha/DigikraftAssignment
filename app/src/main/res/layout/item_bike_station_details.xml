<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAppBackground"
    android:padding="@dimen/itemHorizontalMargin">

    <TextView
        android:id="@+id/tv_bike_station_name"
        style="@style/PrimaryBoldText.Size22"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="15587 Official Dabia" />

    <TextView
        android:id="@+id/tv_bike_station_distance"
        style="@style/PrimaryRegularText.Size14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/tv_title_bike_station"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_bike_station_name"
        tools:text="600m" />

    <TextView
        android:id="@+id/tv_title_bike_station"
        style="@style/SecondaryRegularText.Size14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/itemVerticalMargin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_bike_station_distance"
        app:layout_constraintTop_toBottomOf="@+id/tv_bike_station_name"
        tools:text="- Bike Station" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_available_bikes_base"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cl_available_places_base"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_bike_station_distance">

        <TextView
            android:id="@+id/tv_title_available_bikes"
            style="@style/SecondaryRegularText.Size14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawablePadding="@dimen/itemVerticalMargin"
            android:text="@string/label_available_bikes"
            app:drawableTopCompat="@drawable/ic_bike"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_available_bikes"
            style="@style/TertiaryBoldText.Size40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tv_title_available_bikes"
            app:layout_constraintStart_toStartOf="@+id/tv_title_available_bikes"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_available_bikes"
            tools:text="7" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_available_places_base"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/cl_available_bikes_base"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cl_available_bikes_base"
        app:layout_constraintTop_toTopOf="@+id/cl_available_bikes_base">

        <TextView
            android:id="@+id/tv_title_available_places"
            style="@style/SecondaryRegularText.Size14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawablePadding="@dimen/itemVerticalMargin"
            android:text="@string/label_available_places"
            app:drawableTopCompat="@drawable/ic_lock"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_available_places"
            style="@style/PrimaryBoldText.Size40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tv_title_available_places"
            app:layout_constraintStart_toStartOf="@+id/tv_title_available_places"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_available_places"
            tools:text="28" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
