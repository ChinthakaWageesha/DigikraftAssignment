<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.DigikraftAssignment" parent="Theme.MaterialComponents.Light.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorTextSecondary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorTextPrimary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:windowBackground">@color/colorAppBackground</item>
    </style>

    <!--Splash Theme-->
    <style name="Theme.DigikraftAssignment.Splash">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">true</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <!--Progress bar Loader style-->
    <style name="ProgressbarStyle" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@color/colorTransparent</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!--custom dialog style-->
    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@color/colorTransparent</item>
        <item name="android:bottomDark">@color/colorTransparent</item>
        <item name="android:bottomMedium">@color/colorTransparent</item>
        <item name="android:centerBright">@color/colorTransparent</item>
        <item name="android:centerDark">@color/colorTransparent</item>
        <item name="android:centerMedium">@color/colorTransparent</item>
        <item name="android:fullBright">@color/colorTransparent</item>
        <item name="android:fullDark">@color/colorTransparent</item>
        <item name="android:topBright">@color/colorTransparent</item>
        <item name="android:topDark">@color/colorTransparent</item>
    </style>

    <!--Primary Text style-->
    <style name="PrimaryRegularText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="PrimaryBoldText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="PrimaryRegularText.Size14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PrimaryBoldText.Size22">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="PrimaryBoldText.Size40">
        <item name="android:textSize">40sp</item>
    </style>

    <!--Secondary Text style-->
    <style name="SecondaryRegularText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <style name="SecondaryRegularText.Size14">
        <item name="android:textSize">14sp</item>
    </style>

    <!--Tertiary Text style-->
    <style name="TertiaryBoldText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/colorTextTertiary</item>
    </style>

    <style name="TertiaryBoldText.Size40">
        <item name="android:textSize">40sp</item>
    </style>

</resources>